		<td style="padding-bottom: 7px;" class="lbl">Secretária</td>
		<td style="padding-bottom: 7px;"> <%= text_field(:escritorio, :secretaria, :size => 45, :maxlength => 45) %> </td>
	</tr>	
</table>
